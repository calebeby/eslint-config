{
  "extends": ["config:base"],
  "automerge": true,
  "automergeType": "branch",
  "major": {
    "automerge": false,
    "semanticCommitType": "feat",
    "baseBranches": ["next-major"]
  },
  "packageRules": [
    {
      "packageNames": [
        "eslint-plugin-react",
        "@typescript-eslint/eslint-plugin"
      ],
      "separateMinorPatch": true,
      "minor": {
        "semanticCommitType": "feat",
        "baseBranches": ["next-major"]
      }
    }
  ],
  "semanticCommits": true,
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps"
}
